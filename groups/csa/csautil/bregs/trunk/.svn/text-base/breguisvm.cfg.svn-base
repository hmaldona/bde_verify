<?xml version='1.0' encoding='UTF-8'?>
<Configuration xmlns='urn:x-bloomberg-com:BAS.services.trantsvc'>

  <BasConfig>
    <TcpInterface>
      <Name>BASS.DYNAMIC.LOCALHOST</Name>
      <Mode>CONNECT</Mode>
      <Port>28663</Port>
      <Host>localhost</Host>
    </TcpInterface>

      <!-- 
    <FastSendInterface>
      <Name>BREGUISVC.FS</Name>
      <TaskNumber>64730</TaskNumber>
      <Mode>SERVER</Mode>
    </FastSendInterface>
    -->

    <ServiceInstance>
      <Name>BREGUISVC</Name>
      <Description>BREG UI service</Description>
      <ServiceId>64730</ServiceId>
      <Version>1.255.0</Version>

      <RequestEnvironment>
        <LoadParmcmAreas>true</LoadParmcmAreas>
      </RequestEnvironment>

      <ReplayJournal>
        <Filename>/bb/data/tmp/bas_replay.breguisvc</Filename>
        <EnableOnStartup>false</EnableOnStartup>
      </ReplayJournal>

      <CodecOptions>
        <XmlDecoderOptions>
          <SkipUnknownElements>false</SkipUnknownElements>
        </XmlDecoderOptions>
        <BerDecoderOptions>
          <SkipUnknownElements>false</SkipUnknownElements>
        </BerDecoderOptions>
      </CodecOptions>
    </ServiceInstance>

    <ServiceOfflineConfig>
      <OfflineConfig>
        <Name>breguisv</Name>        <!-- Procmgr name from PWHO -->
        <LoggingConfig>
          <Filename>/bb/data/breguisvc.log.%Y</Filename>
          <StdoutLoggingThreshold>2</StdoutLoggingThreshold>
          <VerbosityLevel>4</VerbosityLevel>
          <PublishInLocalTime>true</PublishInLocalTime>
        </LoggingConfig>
        <ThreadPoolConfig>
          <NumThreads>1</NumThreads>
          <StackSize>4194304</StackSize>
        </ThreadPoolConfig>
        <MetricsConfig>
          <PersistMetrics>true</PersistMetrics>
        </MetricsConfig>
      </OfflineConfig>

      <!-- ChannelPoolConfig/ --> <!-- Uncomment to configure TCP -->
    </ServiceOfflineConfig>

    <!-- Metrics aggregated across all service instances.
         All intervals are specified in seconds.
    -->
    <MetricsComponent>
      <Name>Offline</Name>
      <UpdateInterval>30</UpdateInterval>
    </MetricsComponent>
  </BasConfig>

  <!-- Specify additional application-level configuration elements here. -->

</Configuration>

