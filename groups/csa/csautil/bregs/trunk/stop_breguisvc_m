#!/bin/ksh
# $Id$ $CSID$ $CCId$

if [[ -a /bb/data/netlocal.dta ]] ; then
    read MYCPUID < /bb/data/netlocal.dta
else
    MYCPUID=`hostname`
fi

instance=""
if bbhost -w ${MYCPUID} "gsrv" >> /dev/null 2>&1 ;then 
    instance="1 2 3 4 5 6 7"
fi

for i in $instance
do
    tasks="$tasks breguis$i"
done

for task in $tasks
do
openpipe $task
echo "stopping task " >> /tmp/$task.fifo

send syschk delt $task
/bb/bin/mktemp $task
send $task exit
done

# GENERATED BY BLP_BAS_CODEGEN_3.5.3 Tue Sep 14 13:44:26 2010
